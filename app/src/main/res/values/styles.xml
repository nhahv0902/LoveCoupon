<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/MenuStyle</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MenuStyle">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">@dimen/dp_4</item>
        <item name="cardCornerRadius">@dimen/dp_3</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/dp_200</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextCardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
